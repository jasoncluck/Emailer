<%= simple_form_for @signature, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :signature %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                signatures_path, :class => 'btn' %>
  </div>
<% end %>
