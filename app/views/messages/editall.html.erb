<div class='container'>

	<h1>Edit Messages</h1>
	<br>
	<%= form_tag update_path, :action => :upload, :class => 'form-horizontal', :multipart => true, :method => :put do %>
		<% for message in @unsent_messages %>
			<%= fields_for "messages[]", message do |f| %>
				<%= render 'fields2', :f => f, :message => message %>
				<hr size="8" noshade>
			<% end %>
		<% end %>
		 <div class="form-actions">
		    <%= submit_tag "Save", :class => 'btn btn-primary' %>
		    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		                messages_path, :class => 'btn' %>
	  	</div>
	<% end %>
</div>

